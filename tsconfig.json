{
	"compilerOptions": {
	  "strict": true,
	  "sourceMap": true,
	  "target": "es6",
	  "module": "es2015",
	  "moduleResolution": "node",
	  "lib": [
		"es2017",
		"dom"
	  ],
	  "allowSyntheticDefaultImports": true,
	  "typeRoots": ["node_modules/@types"],
	  "rootDir": "./",
	  "outDir": "./public",
	  "baseUrl": ".",
	  "paths": {
		"~/*": ["src/*"],
	  }
	},
	"include": [
		"./src/",
		"./packages/*/src/",
	],
	"exclude": [
	]
  }